@using SafeCode.Models
@model LoginViewModel

@{
    ViewData["Title"] = "Login Page";
}


 
  <div class="main-container">
        <h3>Fazer Login</h3>
        <div class="main-form">
            <form method="Post">
                <label>Nome</label>
                <input type="text" asp-for="Email" placeholder="Digite seu Email" class="inputMain">
                <span asp-validation-for="Email"class="span"></span><br>

                <label>Senha</label>
                <input type="Password" asp-for="Password" placeholder="Digite sua Senha" class="inputMain" >
                <span asp-validation-for="Password"class="span"></span><br>
                  @if(ViewData["errormessage"] != null)
                {
                     <a class="alert">login invalido!</a>
                }

                <button type="submit">Logar</button>
                <a class="aa" href="/Account/RegisterView">NÃ£o tem conta? Clique aqui</a>
            </form>
             
        </div>
    </div>

    <style>
        .inputMain{
        padding: 15px;
        border-radius: 24px;
        border: 1px solid lightgrey;
        margin: 3px;
        width: 93.5%;
        margin-top: 8px;
        outline: 0;
        }

        .inputMain::placeholder{
            font-size: 18px;
            color: lightgray;
            border: none;
        }

         .span{
            color: red;
            font-size: 17px;
            font-weight: 600;
        }

    </style>
