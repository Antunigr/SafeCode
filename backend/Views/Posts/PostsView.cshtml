{
    @foreach (var item in Model)
    {
    <div class="questions-main">
        <div class="question-container">
            <div class="left-question">
                <div class="img"></div>
                <p class="name-img">
                    @item.applicationUser.UserName
                </p>
            </div>
            <div class="right-question">
                <a class="title">@item.question.Title</a>
                <div class="tags-question">
                     @if (item.question.Categories != null)
                    {
                        <a>@item.question.Categories.</a>
                    } 
                </div>
                <a class="more" href=""> ver mais</a>
            </div>
        </div>

        </div>
 
}}
else
{
    <p class="none">nenhum post</p>
}


<script>
         var currentTag;

            function mostrarTags(id) 
                {
            var tag = document.getElementById(id);

            if (currentTag) {
                currentTag.style.display = "none";
            }

            tag.style.display = "flex";
            currentTag = tag;
            }
   </script>

  

    

    
