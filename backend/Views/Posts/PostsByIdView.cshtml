    <div id="tags-database">
        <div class="tags-container">
           <a>sql</a>
        </div>
    </div>

    <div id="tags-others">
        <div class="tags-container">
            <a>outros</a> 
        </div>
    </div>


@if (Model != null && Model.Any())
{
    @foreach (var item in Model)
    {
    <div class="questions-main">
        <div class="question-container">
            <div class="left-question">
                <div class="img"></div>
                <p class="name-img">Nome</p>
            </div>
            <div class="right-question">
                <a class="title">@item.UserQuestions</a>
                <div class="tags-question">
                     @if (item.UserQuestions != null)
                    {
                        <a>@item.Categories.CategoryName</a>
                    } 
                </div>
                <a class="more" href=""> ver mais</a>
            </div>
        </div>

        </div>
 
}}
else
{
    <p>nenhum post</p>
}


  <script>
         var currentTag;

            function mostrarTags(id) 
                {
            var tag = document.getElementById(id);

            if (currentTag) {
                currentTag.style.display = "none";
            }

            tag.style.display = "flex";
            currentTag = tag;
            }
   </script>


    
